{
  "compilerOptions": {
    // Output
    "target": "ES2020",
    "module": "Node16",
    "outDir": "./dist/esm/", // ./dist/cjs/ is generated by ./tsconfig.cjs.json
    "rootDir": "./",
    "declaration": true,
    "noEmitOnError": false,
    // Resolution
    "resolveJsonModule": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    // Libs
    "lib": ["ES2021"],
    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    // Misc
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "./node_modules/", "./dist/"]
}
