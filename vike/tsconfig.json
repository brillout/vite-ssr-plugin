{
  "compilerOptions": {
    // Output
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist/esm/", // ./dist/cjs/ is generated by ./tsconfig.cjs.json
    "rootDir": "./",
    "declaration": true,
    "noEmitOnError": false,
    // Resolution
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    // Libs
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    // Misc
    "skipLibCheck": true
  },
  "exclude": ["**/*.spec.ts", "./node_modules/", "./dist/"]
}
